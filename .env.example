# CashFlow AI Environment Variables
# Copy this file to .env and fill in your values
# IMPORTANT: Generate secure secrets using: openssl rand -base64 32

# Database (PostgreSQL + TimescaleDB)
# For docker-compose: use postgres host, for local: use localhost
POSTGRES_USER=cashflow
POSTGRES_PASSWORD=  # REQUIRED: Set a strong password
POSTGRES_DB=cashflow_ai
DATABASE_URL=postgresql://cashflow:YOUR_PASSWORD@localhost:5432/cashflow_ai

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication (REQUIRED: generate with openssl rand -base64 32)
JWT_SECRET=  # REQUIRED: min 32 characters
JWT_REFRESH_SECRET=  # REQUIRED: min 32 characters
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Plaid Integration (sandbox for development)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# Stripe (for billing)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Encryption (REQUIRED: for Plaid tokens and MFA secrets)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=  # REQUIRED: 32 bytes for AES-256-GCM

# ML Service
ML_SERVICE_URL=http://localhost:8001

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# Environment
NODE_ENV=development
